<% layout("/layout/boilerplate") -%>
<body>
    <div class="row">
    <div class="col-8 offset-2">
    <h3 class="mt-3">Edit Your Listing:</h3> 
    <form action="/listings/<%= listing._id %>?_method=PUT", 
        method="post" 
        novalidate class="needs-validation"
        enctype="multipart/form-data">

        <div class="mt-3"><!--margin top 3 -->
        <label for="title" class="form-label">Title</label>
        <input type="text", name="listings[title]", value="<%= listing.title %>" class="form-control" required> <!-- listing[]to get a key value pair %>-->
        </div>
       
        <div class="mt-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listings[description]"class="form-control" ><%= listing.description %></textarea>
        </div>

        <div class="mt-3">
            Original Image
            <img src="<%= listing.image.url %>" alt="">

        </div>
        
        <div class="mt-3">
            <label for="image" class="form-label"> Upload Image</label>
            <input type="file", name="listings[image]", placeholder="Image URL" class="form-control">
        </div>

    <div class="row"><!-- putting price and location on the same row-->
        <div class="mt-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number", name="listings[price]", value="<%= listing.price %>"class="form-control" required>
            <div class="invalid-feedback"> Enter a Valid Price!</div>
        </div>

        <div class="mt-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input type="text", name="listings[location]", value="<%= listing.location %>"class="form-control" required>
            <div class="invalid-feedback"> Enter a Valid location!</div> 
        </div>
    </div>
       
        <div class="mt-3">
            <label for="country" class="form-label">Country</label>
            <input type="text", name="listings[country]", value="<%= listing.country %>"class="form-control" required>
            <div class="invalid-feedback"> Enter a Valid Country!</div>
        </div>
        
        <button class=" btn btn-success mt-3 mb-3">Submit Data</button><br>
    
    </form>
    </div>
    </div>
    
</body>
















