<% layout("/layout/boilerplate") -%>

<div class="row">
    <div class="col-8 offset-3">

        <h3 class="col-8 offset-3 mt-3" > Sign Up on Globetrotter </h3>

        <form action="/signup" method="POST" novalidate class="needs-validation">
            <div class="mb-3"> <!-- margin bottom 3 for spacing bootstrap styling-->
                
                <label for="username" class="form-label">Username</label>
                <input type="text", 
                name="username", 
                placeholder="Enter username", 
                class="form-control", 
                required> 

                <!--required keyword triggers mandatory field entry-->
                 <!--listing[]to get a key value pair -->
                 <div class="valid-feedback"> Looks good!</div>
            </div>

            <div class="mb-3"> <!-- margin bottom 3 for spacing bootstrap styling-->
                
                <label for="email" class="form-label">E-mail</label>
                <input type="email", 
                name="email", 
                placeholder="Enter Email", 
                class="form-control", 
                required> 

            </div>

            
            <div class="mb-3"> <!-- margin bottom 3 for spacing bootstrap styling-->
                
                <label for="password" class="form-label">Password</label>
                <input type="password", 
                name="password", 
                placeholder="Enter Password", 
                class="form-control", 
                required> 
                
            </div>



            <button class="btn btn-secondary"> Sign Up </button>

        </form>
    
    
    
    
    
    </div>
</div>